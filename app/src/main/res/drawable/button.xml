<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="3dp" android:color="#bc477b" />
            <gradient android:angle="-90" android:startColor="#bc477b" android:endColor="#bc477b"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="3dp" android:color="#bc477b" />
            <solid android:color="#bc477b"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="3dp" android:color="#006064" />
            <gradient android:angle="-90" android:startColor="#006064" android:endColor="#000006" />
        </shape>
    </item>
</selector>